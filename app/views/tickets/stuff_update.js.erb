<% if @ticket.errors.any? %>
  $('.notice_flash').html("");
  $('.errors').html("<%= j render 'common/errors', resource:@ticket %>");
<% else %>
  $('.errors').html("");
  $('.notice_flash').html("<%= j render 'common/notice' %>");
  $("#stuff_ticket_<%= @ticket.id %>").html("<%= j render 'tickets/ticket', ticket: @ticket %>");
  $('.replies').html("<%= j render @ticket.replies unless @ticket.replies.empty? %>")
<% end %> 